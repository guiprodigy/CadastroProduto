@model Aula01.Models.ClientesModelView
<div class="row">
    <div class="form">
        <div class="card">
            <div class="card-header">
                Editar Cliente
            </div>
            <div class="card-body">

                <form action="/Clientes/SalvarDados" method="post">
                    <label>Id</label>
                    <input class="form-control" type="text" name="Id" readonly value="@Model.Id" />
                    <br />
                    <label>Nome</label>
                    <input type="text" name="Nome" class="form-control" value="@Model.Nome" />
                    <br />

                    <label>Quantidade</label>
                    <input type="text" name="Quantidade" class="form-control" value="@Model.Quantidade" />
                    <br />
                    <label>Telefone</label>
                    <input type="text" name="Valor" class="form-control" value="@Model.Valor" />
                    <br />
                    <button>
                        Enviar dados
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>